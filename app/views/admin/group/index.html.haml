- content_for :sidebar do
  = render :partial => "sidebar/admin_group"

#group-admin
  #group
    .title
      %h1 Groups

  .groups-table
    = form_tag admin_group_index_path, :method => :post do
      %table#admin-table.table.table-striped
        %thead
          %tr
            %th.blue{:width => "50px"} Delete
            %th.yellow{:width => "50px"} Locked
            %th.purple Group
            %th.green Category
            %th.blue{:width => "70px"} Pages
        = render :partial => "group", :collection => @groups

      .actions.form
        = submit_tag "Submit", :class => "btn primary"
